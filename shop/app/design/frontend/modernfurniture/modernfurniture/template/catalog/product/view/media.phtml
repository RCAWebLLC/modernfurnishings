/**
 * Product media data template
 *
 * @see Mage_Catalog_Block_Product_View_Media
 */
?>
<?php
    $_product = $this->getProduct();
    $_helper = $this->helper('catalog/output');
?>
<p class="product-image">
    <?php
        $_img = '<a href="'. $this->helper('catalog/image')->init($_product, 'image') . '" data-gal="prettyPhoto" title="'.$this->htmlEscape($this->getImageLabel()).'"><img id="image" src="'.$this->helper('catalog/image')->init($_product, 'image')->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(TRUE)->resize(449,400).'" alt="'.$this->htmlEscape($this->getImageLabel()).'" title="'.$this->htmlEscape($this->getImageLabel()).'" /></a>';
        echo $_helper->productAttribute($_product, $_img, 'image');
    ?>
</p>
<?php if (count($this->getGalleryImages()) > 0): ?>
<div class="more-views">
    <ul>
    <?php if(count($this->getGalleryImages()) == 1){$pretty_photo = 'prettyPhoto';}else{$pretty_photo = 'prettyPhoto[gallery]'; foreach ($this->getGalleryImages() as $_image): ?>
        <li>
        <a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile())->constrainOnly(TRUE)->keepAspectRatio(TRUE)->keepFrame(TRUE)->resize(449,400); ?>" title="<?php echo $_product->getName();?>" onclick="$('image').src = this.href; $('image').up('a').href='<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>'; return false;">
          <img src="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'thumbnail', $_image->getFile())->resize(106); ?>" width="106" height="106" alt="<?php echo $this->htmlEscape($_image->getLabel()) ?>" />
        </a>
        <!--<a href="<?php echo $this->helper('catalog/image')->init($this->getProduct(), 'image', $_image->getFile()); ?>" data-gal="<?php echo $pretty_photo ?>" title="<?php echo $this->htmlEscape($_image->getLabel()) ?>"></a>-->
        </li>
    <?php endforeach; }; ?>
    </ul>
</div>
<?php endif; ?>
